<p id="notice"><%= notice %></p>

<div id = "chatbox">
   <script src="http://thejakeharding.com/ghostwriter/releases/latest/ghostwriter.js"></script>
   <textarea rows='4' cols='50' class="haunt-me" >
   </textarea> 
   <button type="button" id="bla">Send</button>
   <script>
       var haunt = ghostwriter.haunt({
        input: '.haunt-me'
      , interval: 100
      , manuscript: [
          'Hi thanks for your question\n
	   Do you know how to sign in to your online Square dashboard?\n',
           'Ok cool, go to the transactions tab and press Issue Refund.\n',
        ]
      });
	
    $("#bla").click(function(){ 
        haunt.start() });
    </script>
</div>

<div id = "info">
<p>
  <strong>Name:</strong>
  <%= @expert.name %>
</p>

<p>
  <strong>Imgfile:</strong>
  <%=image_tag @expert.imgfile%>
</p>

<p>
  <strong>Rating:</strong>
  <%= @expert.rating %>
</p>
</div>

