<p id="notice"><%= notice %></p>

<div id = "chatbox">
   <script src="http://thejakeharding.com/ghostwriter/releases/latest/ghostwriter.js"></script>
   <input class = "haunt-me" type="text">
    <script>
       var haunt = ghostwriter.haunt({
        input: '.haunt-me'
      , interval: 100
      , manuscript: [
          'hi I have a question',
           ghostwriter.enter,
           'Here is your answer'
        ]
      });
     haunt.start();
    </script>
</div>

<div id = "info">
<p>
  <strong>Name:</strong>
  <%= @expert.name %>
</p>

<p>
  <strong>Imgfile:</strong>
  <%= @expert.imgfile %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @expert.rating %>
</p>
</div>

